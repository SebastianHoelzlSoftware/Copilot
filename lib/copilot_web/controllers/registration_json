defmodule CopilotWeb.RegistrationJSON do
  alias Copilot.Core.Data.User
  alias Colilot.Core.Data.Customer
  alias Colilot.Core.Data.Contact


  @doc """
  Renders the current user's data.
  """
  def show(%{user: user, customer: customer}) do
    %{data: data(user, customer)}
  end

  defp data(%User{} = user, %Customer{} = customer) do
    %{
      id: user.id,
      email: user.email,
      name: user.name,
      roles: user.roles,
      customer_id: user.customer_id,
      customer_name: customer.name.company_name,
    }
  end
end
