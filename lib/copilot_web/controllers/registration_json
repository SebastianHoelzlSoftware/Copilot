defmodule CopilotWeb.RegistrationJSON do
  alias Copilot.Core.Data.User
  alias Colilot.Core.Data.Customer
  alias Colilot.Core.Data.Contact


  @doc """
  Renders the current user's data.
  """
  def show(%{user: user, customer: customer, contact: contact}) do
    %{data: data(user, customer, contact)}
  end

  defp data(%User{} = user, %Customer{} = customer, %Contact{} = contact) do
    %{
      id: user.id,
      email: user.email,
      name: user.name,
      roles: user.roles,
      customer_id: user.customer_id,
      customer_name: customer.name.company_name,
      contact_first_name: contact.first_name,
      contact_last_name: contact.last_name,
      contact_email: contact.email,
      contact_phone_number: contact.phone_number
    }
  end
end
